<section class="banner category-banner">
  <div class="row no-gutters">
    <div class="col text-left bg-light-peach">
      <div class="banner-text">
        <h3>FRESH PICKED</h3>
        <h1>Farms & Florists</h1>
        <p>Local farmers and florists are taking a big hit since their regular buyers are also out of business. Because of this, many are selling their top-notch goods straight to consumers.</p>
      </div>
    </div>
  </div>
</section>

<section class="category-list">
  <div class="py-5 bg-cream">
    <div class="container ways-to-help">
      <div class="row">
        <% @farms_flowers.each do |farm| %>
          <div class="col-md-4 mb-7 text-left">
            <div class="card mb-3">
              <%= image_tag(farm.media, class: "img-fluid") %>
            </div>
            <p class="business-name"><%= farm.title %></p>
            <p class="body"><%= farm.body %></p>
            <a href="http://<%= farm.url %>" target="_blank"><span class="cta">Be a good neighbor</span> <%= image_tag("arrow_right_small.png", class: "url-arrow") %></a>
            <% if logged_in? %>
              <div><a href="/post/<%= farm.id %>/edit"><span class="cta">edit</span></a></div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<hr>
