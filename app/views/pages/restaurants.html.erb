<section class="banner category-banner">
  <div class="row no-gutters">
    <div class="col text-left bg-light-peach">
      <div class="banner-text">
        <h3>BON APPETIT</h3>
        <h1>Restaurants</h1>
        <p>Dining in at restaurants is something we don’t take for granted. Restaurants all over the city, from hole-in-the-wall taco joints to nine-course dining experiences, have fed and served us for years—and now it’s time we serve them.</p>
      </div>
    </div>
  </div>
</section>

<section class="category-list">
  <div class="py-5 bg-cream">
    <div class="container ways-to-help">
      <div class="row">
        <% @restaurants.each do |restaurant| %>
          <div class="col-md-4 mb-7 text-left">
            <div class="card mb-3">
              <%= image_tag(restaurant.media, class: "img-fluid") %>
            </div>
            <p class="business-name"><%= restaurant.title %></p>
            <p class="body"><%= restaurant.body %></p>
            <a href="http://<%= restaurant.url %>" target="_blank"><span class="cta">Be a good neighbor</span> <%= image_tag("arrow_right_small.png", class: "url-arrow") %></a>
            <% if logged_in? %>
              <div><a href="/post/<%= restaurant.id %>/edit"><span class="cta">edit</span></a></div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<hr>
