<section class="banner category-banner">
  <div class="row no-gutters">
    <div class="col text-left bg-light-peach">
      <div class="banner-text">
        <h3>HOW TO DEAL</h3>
        <h1>Resources for<br>Small Businesses</h1>
        <p>We love our city. And we want to do our part to help the hospitality industry thrive during these wild times. Our beloved restaurants, bars, and small businesses are having to close their doors, and they need our help.</p>
      </div>
    </div>
  </div>
</section>

<section class="category-list">
  <div class="py-5 bg-cream">
    <div class="container ways-to-help">
      <div class="row">
        <% @resources_mental_health.each do |resources| %>
          <div class="col-md-4 mb-7">
            <div class="card mb-3">
              <%= image_tag(resources.media, class: "img-fluid") %>
            </div>
            <p class="business-name"><%= resources.title %></p>
            <p class="body"><%= resources.body %></p>
            <a href="http://<%= resources.url %>" target="_blank"><span class="cta">Be a good neighbor</span> <%= image_tag("arrow_right_small.png", class: "url-arrow") %></a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<hr>
